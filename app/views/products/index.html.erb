<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<%= form_tag(products_path, method: :get) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag('Search' ) %>
<% end %>

<% #Only re-render the list when a new product is added %>
<% cache @products do %>
  <% @products.each do |product| %>
    <% #Only re-render a product when it's modified %>
    <% cache product do %>
      <p><%= product %></p>
      <p><strong><%= product.name %></strong></p>
      <p><%= product.reviews %></p>
      <% product.reviews.each do |review| %>
        <p><strong><%= review.user %></strong>: <%= review.body %></p>
      <% end %>
    <% end %>
  <% end %>
<% end %>

